{
	"name": "backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"dev": "nest start --watch",
		"docker": "docker compose -f docker/docker-compose.dev.yml up -d",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "pnpm exec biome check --write src",
		"migrate": "typeorm migration:run",
		"migrate:generate": "typeorm migration:create ./migrations/$(date +%Y%m%d%H%M%S)-migration"
	},
	"dependencies": {
		"@nestjs/common": "^11.1.6",
		"@nestjs/core": "^11.1.6",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/platform-express": "^11.1.6",
		"@nestjs/swagger": "^11.2.0",
		"@nestjs/typeorm": "^11.0.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"pg": "^8.16.3",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"typeorm": "^0.3.26"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@nestjs/cli": "^11.0.10",
		"@nestjs/schematics": "^11.0.7",
		"@nestjs/testing": "^11.1.6",
		"@types/express": "^5.0.3",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.3.0",
		"@types/supertest": "^6.0.3",
		"globals": "^16.3.0",
		"source-map-support": "^0.5.21",
		"ts-loader": "^9.5.4",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.9.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@nestjs/core",
			"unrs-resolver"
		]
	}
}