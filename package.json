	},
	"private": true,
	"scripts": {
		"build": "nest build",
		"dev": "TZ='UTC' nest start --watch",
		"docker": "docker compose -f docker/docker-compose.dev.yml up -d",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"lint": "pnpm exec biome check --write src",
		"migrate": "typeorm migration:run",
		"migrate:generate": "typeorm migration:create ./migrations/$(date +%Y%m%d%H%M%S)-migration",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main"
